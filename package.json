{
  "name": "@cwbudde/ts2pas",
  "version": "2.0.0-beta.1",
  "description": "TypeScript definition file to DWScript Pascal converter - Modern TypeScript implementation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ts2pas": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:regression": "vitest run regression.test.ts",
    "generate-baselines": "tsx scripts/generate-baselines.ts",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build",
    "check": "pnpm run typecheck && pnpm run lint && pnpm run format:check && pnpm run test"
  },
  "keywords": [
    "typescript",
    "pascal",
    "dwscript",
    "dws",
    "converter",
    "transpiler",
    "code-generation",
    "typescript-definitions"
  ],
  "author": "Christian-W. Budde",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CWBudde/ts2pas.git"
  },
  "bugs": {
    "url": "https://github.com/CWBudde/ts2pas/issues"
  },
  "homepage": "https://github.com/CWBudde/ts2pas#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.1",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.20.6",
    "vitest": "^2.1.8"
  }
}
